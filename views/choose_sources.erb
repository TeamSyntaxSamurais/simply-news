<h3>Click a source to add it to your feed.</h3>
  <form action="/save-sources" method="post">
    <div class="row news-sources">
      <% @sources.each_slice(2) do |source1, source2| %>
        <div class="col-xs-6 col-sm-3 left-source">
          <img src="/images/<%= source1[:image_url] %>" alt="<%= source1[:name] %>" class="form-image">
          <input type="checkbox" name="source_<%= source1[:id] %>"<% if source1[:checked] %> checked="checked" <% end %>>
        </div>
        <div class="col-xs-6 col-sm-3 right-source">
          <img src="/images/<%= source2[:image_url] %>" alt="<%= source2[:name] %>" class="form-image">
          <input type="checkbox" name="source_<%= source2[:id] %>"<% if source2[:checked] %> checked="checked" <% end %>>
        </div>
      <% end %>
    </div>
    <div class="row submit-form">
      <div class="col-xs-12">
        <button type="submit" class="btn btn-warning form-control">Save Sources</button>
      </div>
    </div>
  </form>
