<% if @message %>
  <li><%= @messgae %></li>
<% end %>
<div class="row form-wrapper">
  <div class="col-xs-12">
    <h4 class="text-center">Create an Account to Customize Your News Feed</h4>
  </div>
</div>
<form action="/account/register" method="post">
  <div class="form-group">
    <input type="text" class="form-control" name="first_name" placeholder="First Name">
  </div>
  <div class="form-group">
    <input type="email" class="form-control" name="email" placeholder="Email">
  </div>
  <div class="form-group">
    <input type="password" class="form-control" name="password" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-warning form-control">Register</button>
</form>
<div class="row row-buffer">
  <div class="col-xs-12">
    <h4>Already have an account?</h4>
    <a href="/account/login"><button type="submit" class="btn btn-primary">Login</button></a>
  </div>
</div>
