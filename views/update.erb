<h3>Update Account</h3>
<p>
  Account name is: <%= session[:current_account][:first_name] %>
<em>Update: <%= @account %>.</em>
</p>
<form action="/account/update" method="post">

  <input type="hidden" name="id" value="<%= @account.id %>">
  <input type="text" name="first_name" value="<%= @account.first_name %>">
  <input type="email" name="email" value="<%= @account.email %>">

  <input type="password" name="password" value="<%= @account.password %>">
  <input type="submit">Update</input>
  <button type="submit" class="btn btn-primary">Update</button>
    <button type="submit" class="btn btn-success">Update</button>
      <button type="submit" class="btn btn-info">Update</button>
        <button type="submit" class="btn btn-warning">Update</button>
              <button type="submit" class="btn btn-danger">Update</button>
</form>

